<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageListViewDialog">

    <TextView
        android:id="@+id/titleListViewDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="ListView With Image Dialog" />

    <ListView
        android:id="@+id/dialogListView"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_below="@id/titleListViewDialog"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnDialogOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="OK"
        android:textColorHint="@color/white"
        android:layout_below="@id/dialogListView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>